
<%= form_for @pet do |f| %>
  <div class= "form-group">
  <%= f.label :name %> :
  <br><%= f.text_field :name, class: "form-control" %>
  </div>
  <div class= "form-group">
  <%= f.label :bio %> :
  <br><%= f.text_area :bio, size: "60x12", class: "form-control" %>
  </div>
  <div class= "form-group">
  <%= f.label :rating %> :
  <br> <%= f.select :rating, (1..Pet::RATING_MAX), {}, class: "form-control" %>
  </div>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>